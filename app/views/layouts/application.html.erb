<!DOCTYPE html>
<html>
<head>
  <title>Notely</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body> 

    <header>
    <% if session[:id].present? %>
        <div class="right-links">
             <div class="notification">
                <i class="fa fa-lg fa-bell-o"></i>
            </div>
            <%= link_to "@"+session[:username],root_path %>
            <%= link_to "Logout",logout_path %>
        </div>
     <% end %>
    </header>
    <aside class="left-container">
        <p id="notely">Notely</p>
        <nav>
            <ul>
                <div class="each-list-set">
                    <li><a href="#" class="bold-link">General</a></li>
                    <li><%= link_to user_notes_path(session[:id]) do %>
                            My Notes <i class="fa fa-lg fa-book"></i>
                        <% end %>
                    </li>
                    <li><a href="#">Create Note <i class="fa fa-lg fa-pencil-square-o"></i></a></li>
                    <li><a href="#">Archives <i class="fa fa-lg fa-archive"></i></a></li>
                </div>
                <div class="each-list-set">
                    <li><a href="#" class="bold-link">Settings</a>
                        <!--                 <i class="fa fa-lg fa-cog"></i>-->
                    </li>
                    <li><a href="#">Note </a></li>
                    <li><a href="#">Profile </a></li>
                </div>
                <div class="each-list-set">
                    <li><a href="#" class="bold-link">Contact</a> </li>
                    <li><a href="http://github.com/PezCoder">Github</a> <i class="fa fa-lg fa-github"></i></li>
                    <li><a href="#">LinkedIn</a> <i class="fa fa-lg fa-linkedin"></i></li>
                    <li><a href="http://facebook.com/rahul11061995">Facebook</a> <i class="fa fa-lg fa-facebook-official"></i></li>
                    <li><a href="#">Email</a> <i class="fa fa-lg fa-envelope"></i></li>
                </div>
            </ul>
        </nav>
    </aside>
    <main>
		<%= yield %>
    </main>
</body>
</html>
